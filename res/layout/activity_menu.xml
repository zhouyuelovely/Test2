
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@drawable/main_bg"
     >
   <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
      <TextView 
         android:id="@+id/tttt"
         android:layout_marginTop="10dp"
         android:textSize="22sp" 
         android:textColor="#ffffff"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:text="用户："/>
    <TextView 
         android:id="@+id/names"
         android:layout_toRightOf="@id/tttt"
         android:layout_marginTop="10dp"  
         android:layout_width="wrap_content" 
         android:textSize="22sp" 
         android:textColor="#ffffff" 
         android:layout_height="wrap_content"
       />
    <Button
         android:id="@+id/ex"
         android:layout_width="wrap_content" 
         android:layout_alignParentRight="true"
         android:layout_gravity="right" 
         android:layout_height="wrap_content" 
         android:layout_marginTop="10dp"
         android:paddingLeft="10dp" 
         android:paddingRight="10dp" 
         android:text="退出登录"/>
    </RelativeLayout>
  <GridView
  android:layout_width="wrap_content"
  android:layout_height="fill_parent"
  android:numColumns="auto_fit"
  android:padding="25dp"
  android:layout_marginTop="66dp"
  android:layout_marginLeft="20dp"
  android:horizontalSpacing="25dp"
  android:verticalSpacing="25dp"
  android:columnWidth="80dp"
  android:id="@+id/grid_view_01"
  
  ></GridView>
</LinearLayout>
